<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Requester Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { padding-top: 56px; }
        .sidebar { height: 100vh; position: fixed; top: 56px; left: 0; width: 200px; background-color: #f8f9fa; }
        .content { margin-left: 200px; padding: 20px; }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SLFDS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Requester" asp-action="Dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link ">
                                Logout <i class="bi bi-box-arrow-right"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar d-none d-md-block">
        <ul class="nav flex-column pt-3">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Requester" asp-action="Dashboard"> <i class="bi bi-speedometer2"></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Requester" asp-action="Search"> <i class="bi bi-search"></i> Search Files</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Requester" asp-action="Requests"> <i class="bi bi-card-list"></i> My Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Requester" asp-action="Notifications"> <i class="bi bi-bell"></i> Notifications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Help"> <i class="bi bi-question-circle"></i> Help & Support</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>