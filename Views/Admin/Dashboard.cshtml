@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
        <h1 class="h2 fw-bold">Admin Dashboard</h1>
    </div>

    <!-- Overview Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h5 class="card-title fw-semibold">Total Users</h5>
                    <p class="card-text fs-3 mb-0">@Model.Users.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-semibold">Roles Available</h5>
                    <p class="card-text fs-3 mb-0">@Model.Roles.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-activity display-4 text-warning mb-3"></i>
                    <h5 class="card-title fw-semibold">Active Users</h5>
                    <p class="card-text fs-3 mb-0">@Model.Users.Count(u => u.IsActive)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    @await Html.PartialAsync("_UserModals", Model)
</div>
