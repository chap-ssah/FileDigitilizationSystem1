@model List<FileDigitilizationSystem.Models.UserViewModel>
@{
    ViewData["Title"] = "Internal Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2 class="mb-4">Internal Users</h2>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Actions</th> <!-- new column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.Gender</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <form asp-action="ToggleUserStatus" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="@(user.IsActive ? "bi bi-x-circle" : "bi bi-check-circle")"></i>
                            @(user.IsActive ? "Deactivate" : "Activate")
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>





