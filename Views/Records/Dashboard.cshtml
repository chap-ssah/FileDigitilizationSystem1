@model FileDigitilizationSystem.Models.RecordsDashboardViewModel
@{
    ViewData["Title"] = "Records Management Dashboard";
    Layout = "~/Views/Shared/_RecordsLayout.cshtml";
}



<div class="row g-4 mb-4">
    <div class="col-md-4">
        <a asp-action="Requests" asp-controller="Records" class="text-decoration-none text-dark">
            <div class="card shadow-sm rounded-4 card-hover h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-clock-history display-4 text-warning mb-3"></i>
                    <h5 class="card-title fw-semibold">Pending Requests</h5>
                    <p class="card-text fs-3 mb-0">@Model.PendingRequests</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a asp-action="Digitized" asp-controller="Records" class="text-decoration-none text-dark">
            <div class="card shadow-sm rounded-4 card-hover h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-cloud-check display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-semibold">Digitized Files</h5>
                    <p class="card-text fs-3 mb-0">@Model.DigitizedFiles</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm rounded-4 card-hover h-100">
            <div class="card-body text-center p-4">
                <i class="bi bi-bell-fill display-4 text-primary mb-3"></i>
                <h5 class="card-title fw-semibold">Notifications</h5>
                <p class="card-text fs-3 mb-0">@Model.Notifications.Count</p>
            </div>
        </div>
    </div>
</div>


